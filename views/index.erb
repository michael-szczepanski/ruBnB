<% content_for :title do %>
     Home | ruBnB
<% end %>

<h1>Welcome to ruBnB!</h1>

<% if @user_not_logged_in %> 

<h2>Log in</h2>

<% flash.keys.each do |type| %>
    <div data-alert class="flash <%= type %> alert-box radius">
        <%= flash[type] %>
    </div>
    <% end %>
        <form method="POST" action="/login">
            <div>
                <label for="email">Email</label>
                <input type="text" name="email" placeholder="eg: jack@gmail.com"
                pattern="^([a-zA-Z0-9_\.-]+)@([\da-zA-Z\.-]+)\.([a-zA-Z\.]+)$" oninvalid="alert('Email format invalid')">
            </div>

            <div>
                <label for="password">Password</label>
                <input type="password" name="password" placeholder="eg supersecret12321">
            </div>

            <div>
                <button type="submit">Login Now!</button>
            </div>
        </form>


        <br>

        <p>New to ruBnB? Sign up <a href="/signup">here!</a></p>

<% end %>

        <h2>Here are the most popular spaces:</h2>
            <% @top_spaces.each do |space| %>
            <div>
                <h3><a href="/spaces/<%=space.id%>">
                <%= space.name %>
                </a></h3>
                About this space: <%= space.description %> <br>
                Price per night: Â£<%= space.price_per_night %> <br>
            </div>
        <% end %>