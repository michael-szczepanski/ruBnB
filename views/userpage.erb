    <input type="submit" value="Log out" />
</form>

<h2>Here are your current spaces:</h2>
<% @spaces_by_user.each do |space| %>
    <div>
        <h3><a href="/spaces/<%=space.id%>">
                <%= space.name %>
            </a></h3>
        About this space: <%= space.description %> <br>
